<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="az.cybernet.notification.mapper.NotificationMapper">

    <insert id="insert" parameterType="az.cybernet.notification.dto.event.NotificationCreatedEvent" useGeneratedKeys="true">
        INSERT INTO notification.notification(user_id, message, status)
        VALUES (#{userId}, #{message}, #{status})
    </insert>
</mapper>
