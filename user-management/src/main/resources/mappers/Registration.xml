<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="az.cybernet.usermanagement.mapper.RegistrationMapper">
    <insert id="insertRegistration" parameterType="az.cybernet.usermanagement.entity.Registration">
            INSERT INTO users.registrations ("status", "legal_adress", "residential_address", "phone_number", "legal_entity_name", "type_of_registration", "registration_number", "registration_status")
            VALUES (#{registrationStatus}, #{legalAddress}, #{residentialAddress}, #{phoneNumber}, #{legalEntityName}, #{typeOfRegistration}, #{registrationNumber}, #{registrationStatus})
    </insert>

    <select id="findPendingRegistrationByUserId" resultType="az.cybernet.usermanagement.entity.Registration">
        SELECT *
        FROM users.registrations
        WHERE user_id = #{userId} AND registration_status = 'PENDING_APPROVAL'
        ORDER BY created_at DESC
            LIMIT 1
    </select>

    <update id="updateStatus">
        UPDATE users.registrations
        SET
            registration_status = #{status},
            updated_at = now()
        WHERE id = #{registrationId}
    </update>
</mapper>

